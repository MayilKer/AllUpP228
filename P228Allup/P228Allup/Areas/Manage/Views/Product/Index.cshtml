@model List<Product>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<!-- Page Heading -->
<div class="row justify-content-between">
    @*@{
        if (TempData["error"] != null)
        {
            <input id="toster" hidden value="@TempData["error"]" />
        }
    }*@


    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Categories Page</h1>
    </div>
    <div class="col-lg-1">
        <a asp-area="manage" asp-controller="product" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Product Count</th>
                    <th>Created At</th>
                    <th>Setting</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model)
                {
                <tr>
                    <td>@counter</td>
                    <td>
                        <img width="100px;" src="~/assets/images/product/@product.MainImage" alt="Alternate Text" />
                    </td>
                    <td>@product.Title</td>
                    <td>@product.Price</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Brand.Name</td>
                    <td>@product.Count</td>
                    <td>@product.CreatedAt?.ToString("dd / MM / yyyy")</td>
                    <td>
                        <a class="btn btn-warning" asp-area="manage" asp-controller="product" asp-action="update" asp-route-id="@product.Id">Update</a>
                        <a class="btn btn-danger">Delete</a>
                        <a class="btn btn-primary">Detail</a>
                    </td>
                </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>
